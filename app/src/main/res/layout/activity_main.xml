<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <Button
        android:id="@+id/materialDialog"
        android:layout_width="match_parent"
        android:text="MaterialDialog"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/DisplayinganIcon"
        android:layout_width="match_parent"
        android:text="Displaying an Icon"
        android:layout_height="wrap_content" />
        <Button
            android:id="@+id/Stackingbehavior"
            android:layout_width="match_parent"
            android:text="Stacking Behavior"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/NeutralActionButton"
            android:layout_width="match_parent"
            android:text="Neutral Action Button"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/Callbacks"
            android:text="Callbacks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/CheckBoxPrompts"
            android:layout_width="match_parent"
            android:text="CheckBox Prompts"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/ListDialogs"
            android:text="List Dialogs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/SingleChoiceListDialogs"
            android:layout_width="match_parent"
            android:text="Single Choice List Dialogs"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/MultiChoiceListDialogs"
            android:text="Multi Choice List Dialogs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/AssigningIDstoListItemViews"
            android:layout_width="match_parent"
            android:text="Assigning IDs to List Item Views"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/CustomListDialogs"
            android:layout_width="match_parent"
            android:text="Custom List Dialogs"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/CustomViews"
            android:text="Custom Views"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/Colors"
            android:text="Colors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/Gravity"
            android:layout_width="match_parent"
            android:text="Gravity"
            android:layout_height="wrap_content" />


    </LinearLayout>


</ScrollView>
